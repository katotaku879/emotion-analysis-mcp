{
  "manifest_version": 3,
  "name": "Claude PA Data Bridge",
  "version": "1.0.0",
  "description": "Claude Personal Assistantのデータブリッジ",
  
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "http://localhost:3000/*",
    "https://claude.ai/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
