{
  "manifest_version": 3,
  "name": "Personal AI Context Injector",
  "version": "3.0.0",
  "description": "AIコンテキスト注入",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["js/inject-context.js", "js/data-bridge.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["js/main-script.js"],
      "matches": ["https://claude.ai/*"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}