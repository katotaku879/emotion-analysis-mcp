{
  "manifest_version": 3,
  "name": "Claude AI Complete Suite",
  "version": "5.0.0",
  "description": "Auto save + Personal Assistant + Career Support",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "http://localhost:3000/*",
    "http://localhost:3333/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
