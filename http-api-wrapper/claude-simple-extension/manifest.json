{
  "manifest_version": 3,
  "name": "Claude Auto Save",
  "version": "3.0.0",
  "description": "Auto save Claude.ai messages",
  "permissions": ["tabs", "storage"],
  "host_permissions": [
    "https://claude.ai/*",
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["save.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
